<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="co.specialforce">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.NFC"/>
    <uses-feature android:name="android.hardware.nfc" android:required="true"/>


    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/FullScreenTheme">
        <activity android:name=".view.activity.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.activity.foodSearch.FoodSearchActivity"/>
        <activity android:name=".view.activity.unitSearch.UnitSearchActivity"/>
        <activity android:name=".view.activity.heart.HeartActivity"/>
        <activity android:name=".view.activity.weight.WeightActivity"/>
        <activity android:name=".view.activity.sleep.SleepActivity"/>
        <activity android:name=".view.activity.weight.WeightDialogActivity"
            android:theme="@android:style/Theme.Material.Dialog"/>
        <activity android:name=".view.activity.sleep.SleepDialogActivity"
            android:theme="@android:style/Theme.Material.Dialog"/>
        <activity android:name=".view.activity.login.LoginActivity"/>
        <activity android:name=".view.activity.join.JoinActivity" />
        <activity android:name=".view.activity.main.MainActivity" />
    </application>

</manifest>